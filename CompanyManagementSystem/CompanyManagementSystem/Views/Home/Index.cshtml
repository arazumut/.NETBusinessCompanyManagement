@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container py-5">
    <div class="row align-items-center mb-5">
        <div class="col-lg-6">
            <h1 class="display-4 fw-bold text-primary mb-4">Şirket Yönetim Sistemi</h1>
            <p class="lead">
                Modern ve kullanımı kolay şirket yönetim çözümü ile insan kaynakları süreçlerinizi, 
                proje yönetimini ve şirket içi operasyonları tek bir platformdan yönetin.
            </p>
            @if (User.Identity == null || !User.Identity.IsAuthenticated)
            {
                <div class="d-grid gap-2 d-md-flex justify-content-md-start mt-4">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg px-4 me-md-2">
                        <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                    </a>
                </div>
            }
            else
            {
                <div class="d-grid gap-2 d-md-flex justify-content-md-start mt-4">
                    <a asp-controller="Employees" asp-action="Index" class="btn btn-primary btn-lg px-4 me-md-2">
                        <i class="bi bi-people"></i> Personel Yönetimi
                    </a>
                    <a asp-controller="Projects" asp-action="Index" class="btn btn-outline-primary btn-lg px-4">
                        <i class="bi bi-kanban"></i> Proje Yönetimi
                    </a>
                </div>
            }
        </div>
        <div class="col-lg-6 d-none d-lg-block">
            <img src="https://source.unsplash.com/random/600x400/?office,business" alt="Ofis" class="img-fluid rounded shadow" />
        </div>
    </div>

    <hr class="my-5" />

    <div class="row g-4 py-4">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-people display-4 text-primary mb-3"></i>
                    <h3 class="card-title">İnsan Kaynakları</h3>
                    <p class="card-text">Personel bilgilerini, departmanları ve izin taleplerini kolayca yönetin.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-kanban display-4 text-primary mb-3"></i>
                    <h3 class="card-title">Proje Yönetimi</h3>
                    <p class="card-text">Projelerinizi planlayın, görevleri atayın ve ilerlemenizi takip edin.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up display-4 text-primary mb-3"></i>
                    <h3 class="card-title">Raporlama</h3>
                    <p class="card-text">Şirketinizin performansını analiz edin ve veri odaklı kararlar alın.</p>
                </div>
            </div>
        </div>
    </div>
</div>
